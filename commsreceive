local net = peripheral.find("modem")
net.open(1)
net.open(2)
local event, modemSide, senderChannel, replyChannel, message, senderDistance = os.pullEvent("modem_message")

mon.clear()
mon.setCursorPos(1,1)
mon.write("I just received a message from: "..senderChannel)
mon.setCursorPos(1,2)
mon.write("The modem receiveing this is located on the "..modemSide.." side")
mon.setCursorPos(1,3)
mon.write("The message was: "..message)
mon.setCursorPos(1,4)
mon.write("The sender is: "..senderDistance.." blocks away from me.")
mon.setCursorPos(1,5)
mon.write("I will reply on: "..replyChannel)
net.transmit(2, 1, "Hello, I received your message!")
mon.setCursorPos(1,7)
mon.write("This program is being written and tested by Ninja_5tyl3")
